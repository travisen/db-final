<div class ="container" id="characters-page">
	<h1>Characters</h1>
	<h3>Current Character List</h3>
	<table>
		<thead>
			<tr>
				<th>ID</th>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Homeworld</th>
				<th>Faction</th>
				<th>Species</th>
			</tr>
		</thead>
		<tbody id="table-body">
			<tr>
				<td>{{this.id}}</td>
				<td>{{this.f_name}}</td>
				<td>{{this.l_name}}</td>
				<td>{{this.homeworld}}</td>
				<td>{{this.faction}}</td>
				<td>{{this.species}}</td>
			</tr>
		</tbody>
	</table>
	
	<br>

	<h3>Add characters</h3>
	<form>
		<div class="row">
			<div class ="four columns">
				<label>First Name</label>
				<input class ="u-full-width" placeholder="Luke" id="f_name">
			</div>
			<div class ="four columns">
				<label>Last Name</label>
				<input "u-full-width" placeholder="Luke" id="l_name">
			</div>
		</div>

		<label>Homeworld</label>
		<select id="dropdown-planets"></select>

		<label>Faction</label>
		<select id="dropdown-factions"></select>

		<label>Species</label>
		<select id="dropdown-species"></select>

		<input type="submit" value="Submit" id="submit-data-characters"/>
	</form>
</div>